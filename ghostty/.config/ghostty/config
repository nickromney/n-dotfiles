# Ghostty Configuration
# A modern, GPU-accelerated terminal emulator

# Font configuration
# Match VSCode font preferences: JetBrainsMono Nerd Font → Fira Code → Consolas
font-family = "JetBrainsMono Nerd Font"
font-family = "Fira Code"
font-family = Consolas

font-size = 24

# Font features
# font-thicken = true  # macOS only - makes fonts slightly bolder
# font-synthetic-style = true  # Allow synthetic bold/italic if not available

# Optional: If you have Nerd Fonts installed, uncomment to use for icons
# font-family = "JetBrainsMono Nerd Font"
font-codepoint-map = U+E000-U+F8FF="JetBrainsMono Nerd Font"

# Cursor
cursor-style = block

# Window
window-padding-x = 10
window-padding-y = 10

# Background opacity (1.0 = opaque, 0.0 = transparent)
background-opacity = 1.0

# Scrollback
scrollback-limit = 10000

# Mouse
mouse-hide-while-typing = true

# Copy on select
copy-on-select = clipboard

# macOS specific
macos-option-as-alt = true

# Shell integration
shell-integration = detect

# Use Nushell as the default shell
command = /opt/homebrew/bin/nu

# Theme
# Using Monokai Dimmed to match VSCode
theme = Dimmed Monokai

# Window title
title = Ghostty

# Confirm on close with multiple tabs
confirm-close-surface = true

# Quick terminal (dropdown) settings
# quick-terminal-position = top
# quick-terminal-screen = current
# quick-terminal-animation-duration = 0.2

# Custom themes can be placed in ~/.config/ghostty/themes/
